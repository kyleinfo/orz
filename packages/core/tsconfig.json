{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "removeComments": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    // https://github.com/ezolenko/rollup-plugin-typescript2/issues/12#issuecomment-536173372
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["**/*.ts", "index.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "jest",
    "lib",
    "__tests__",
    "fixtures",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
